{
  "kind": "collectionType",
  "collectionName": "points",
  "info": {
    "singularName": "point",
    "pluralName": "points",
    "displayName": "Point",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 3
    },
    "active": {
      "type": "boolean"
    },
    "midia": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "websiteURL": {
      "type": "string"
    },
    "latitude": {
      "type": "float",
      "required": true
    },
    "longitude": {
      "type": "float"
    },
    "adress": {
      "type": "string"
    },
    "number": {
      "type": "integer"
    },
    "workingHour": {
      "type": "time"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment"
    },
    "ratings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::rating.rating"
    },
    "deactivationReason": {
      "type": "text"
    }
  }
}
